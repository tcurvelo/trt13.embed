<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      lang="en"
      i18n:domain="trt13.portal.embedvideo">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main"
        tal:define="toLocalizedTime nocall:context/@@plone/toLocalizedTime">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="context/title" />

        <div tal:replace="structure provider:plone.belowcontenttitle" />

        <p class="documentDescription" tal:content="context/description" />

        <div tal:replace="structure provider:plone.abovecontentbody" />

        <tal:tabs tal:condition="view/alternatives">
          <ul id="trt13_portal_embedvideo_alternatives">
            <li class="current">
              <a tal:attributes="href context/absolute_url"
                 i18n:translate="default"
                 href=""
                 >Default</a>
            </li>

            <tal:alternatives tal:repeat="alternative view/alternatives">
            <li><a tal:content="alternative/title"
                  tal:attributes="href alternative/absolute_url">
                  Alternative Video
                </a>
            </li>
            </tal:alternatives>

          </ul>
        </tal:tabs>

        <div id="trt13_portal_embedvideo">

        <object
            id="trt13_portal_embedvideo_object"
            standby="" width="" height="" type=""

            tal:attributes="standby context/description;
                            data context/url;
                            width context/width;
                            height context/height;
                            type context/mimetype;">

            <embed
                id='trt13_portal_embedvideo_embed'

                tal:attributes="
                    src context/url;
                    width context/width;
                    height context/height;
                    type context/mimetype;"
                src="" width="" height="" type="">
            </embed>

        </object>

        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
